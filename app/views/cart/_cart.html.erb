
<%= turbo_frame_tag "cart" do %>
  <h1>Корзина</h1>
  <% if @cart.orderables.count > 0 %>
    <%= render "cart/orderables" %>
    <p>Всего за товары: <%= @cart.total %></p>
  <% else %>
    <p>Ваша корзина пуста</p>
  <% end %>
<% end %>
<nav>
  <ul>
    <li><%= link_to 'Home', root_path %></li>
    <li><%= link_to 'Корзина', cart_path %></li>
    <li><%= link_to 'Список товаров', ecomms_path %></li>
  </ul>
</nav>